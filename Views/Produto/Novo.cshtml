@model WebApp.Models.ProdutoViewModel

<h1>Cadastro de Produto</h1>

<form asp-action="Novo">
    <div class="card">
        <div class="card-header">Informações sobre Produto</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <label asp-for="codigoDoProduto"></label>
                    <input type="number" asp-for="codigoDoProduto" class="form-control" />
                    <span asp-validation-for="codigoDoProduto" class="text-danger"></span>
                    </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Preco"></label>
                    <input type="number" asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
               
    
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <label asp-for="Categoria"></label>
                    <select asp-for="Categoria" class="form-control">
                        <option value="">Selecione</option>
                        <option value="Infatil">Infatil</option>
                        <option value="Juvenil">Juvenil</option>
                        <option value="Aduto">Aduto</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <label asp-for="Observacao"></label>
                    <textarea  asp-for="Observacao" class="form-control" ></textarea>
                </div>
                
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-2">
                    <input type="submit" value="Gravar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
</form>

<hr />

<div class="row">
    <div class="col-md-2">
        <a class="btn btn-dark" asp-controller="Produto" asp-action="Index">Voltar</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
